<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Alta de Producto - Admin</title>
  <link rel="stylesheet" href="/styles/adminPagina.css" />
</head>
<body>
  <header>
    <h1>Alta de Producto</h1>
  </header>

  <main>
    <form action="/producto/dashboard" method="POST" enctype="multipart/form-data">
      <label for="nombre">Nombre:</label>
      <input type="text" name="nombre" id="nombre" required>

      <label for="categoriaFK">Categoría:</label>
      <select name="categoriaFK" id="categoriaFK" required>
        <% categorias.forEach(cat => { %>
          <option value="<%= cat.id %>"><%= cat.nombre %></option>
        <% }) %>
      </select>

      <label for="precio">Precio ($):</label>
      <input type="number" name="precio" id="precio" min="0" step="0.01" required>

      <label for="imagen">Imagen:</label>
      <input type="file" name="imagen" id="imagen" accept="image/*" required>

      <button type="submit">Agregar Producto</button>
    </form>

    <a href="/administrador/dashboard">← Volver al Dashboard</a>
  </main>
</body>
</html>