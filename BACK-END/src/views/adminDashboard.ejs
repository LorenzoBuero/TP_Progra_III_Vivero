<!-- views/adminDashboard.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard Administrador</title>
  <link rel="stylesheet" href="/styles/adminPagina.css">
</head>
<body>
  <header>
    <h1>Panel de Administración - Vivero</h1>
    <a href="/administrador/dashboard/crear" class="boton boton-verde">Agregar Producto</a>
  </header>

  <main>
    <section>
      <h2>Listado de Productos</h2>
      <div class="productos">
        <% productos.forEach(producto => { %>
          <div class="tarjeta-producto">
            <img src="<%= producto.imagen %>" alt="<%= producto.nombre %>">
            <p><strong><%= producto.nombre %></strong></p>
            <p>Categoría: <%= producto.categoria ? producto.categoria.nombre : "Sin categoría" %></p>
            <p>Precio: $<%= producto.precio %></p>
            <p>Estado: <%= producto.stock ? "Activo" : "Inactivo" %></p>
            <div class="acciones">
            <form action="/administrador/dashboard/alternarStock/<%= producto.id %>/dashboard" method="POST" style="display:inline;"></form>  
              <% if (producto.stock) { %>
                  <button type="submit">Desactivar</button>
              <% } else { %>
                  <button type="submit">Activar</button>
              <% } %>
              </form>
              <a href="/administrador/dashboard/<%= producto.id %>/editar" class="boton azul">Editar</a>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
  </main>

  <!-- Modal de confirmación JS opcional -->
</body>
</html>